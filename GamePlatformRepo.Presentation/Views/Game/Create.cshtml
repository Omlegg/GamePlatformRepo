@model Game
@{
    IEnumerable<ValidationResponse>? validationErrors = null;
    var validationErrorsObject = base.ViewData["validation_errors"];

    if(validationErrorsObject is IEnumerable<ValidationResponse>) {
        validationErrors = validationErrorsObject as IEnumerable<ValidationResponse>;
    }
}


@if(validationErrors != null) {
    <ul>
        @foreach(var validationErrorItem in validationErrors) {
            <li>
                <b>@validationErrorItem.Property</b> <span>@validationErrorItem.Message</span>
            </li>
        }
    </ul>
}
<h2>Create new game</h2>



<form  enctype="multipart/form-data" class="row g-3" method="post" action="/CreateGame">
    <div class="mb-1">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name">
    </div>
    <div class="mb-1">
        <label for="description" class="form-label">Description</label>
        <input type="text" class="form-control" id="description" name="description">
    </div>
    <div class="mb-1">
        <label for="price" class="form-label">Price</label>
        <input type="text" class="form-control" id="price" name="price">
    </div>
    <div class="mb-1">
        <label for="dateOfPublication" class="form-label">Date Of publictation</label>
        <input type="date" class="form-control" id="dateOfPublication" name="dateOfPublication">
    </div>
    <div>
        <label for="file" class="form-label">Game</label>
        <input id="file" class="form-control" name="file" type="file">
    </div>
    <button class="btn btn-success">Create</button>

</form>
